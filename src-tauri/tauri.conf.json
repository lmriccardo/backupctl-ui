{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "backupctl-ui",
  "version": "0.1.0",
  "identifier": "com.ricca.backupctl",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "backupctl-ui",
        "width": 1280,
        "height": 860,
        "minWidth": 1280,
        "minHeight": 860
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
